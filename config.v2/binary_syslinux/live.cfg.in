label live-de
	menu label Demo Live-System (^DE)
	menu default
	text help
 Boot live system with german keyboard layout
	endtext
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE_DE@ quiet

